{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug  Training (Fit)",
      "type": "debugpy",
      "request": "launch",
      "program": "src/main.py",
      "args": [
        "fit",
        "-c",
        "configs/data/hsi_dermoscopy.yaml",
        "-c",
        "configs/model/hsi_classifier.yaml",
        // "--trainer.logger.name",
        // "exp1"
      ],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "0"  // run normally (no remote wait)
      }
    },
    {
      "name": "Debug Fast Training (Fit)",
      "type": "debugpy",
      "request": "launch",
      "program": "src/main.py",
      "args": [
        "fit",
        "-c",
        "configs/data/hsi_dermoscopy.yaml",
        "-c",
        "configs/model/hsi_classifier.yaml",
        "--trainer.fast_dev_run",
        "true"
      ],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "0"  // run normally (no remote wait)
      }
    },
    {
      "name": "Attach to Debugpy (Remote/Cluster/Container)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ]
    }
  ]
}